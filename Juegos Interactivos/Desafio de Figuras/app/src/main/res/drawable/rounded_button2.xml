<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D84315" /> <!-- color mÃ¡s oscuro al presionar -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF5722" /> <!-- color naranja por defecto -->
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#BF360C" />
        </shape>
    </item>

</selector>
